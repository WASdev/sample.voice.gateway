{
  "kind": "PersistentVolume",
  "apiVersion": "v1",
  "metadata": {
    "name": "recordings",
    "labels": {}
  },
  "spec": {
    "capacity": {
      "storage": "2Gi"
    },
    "accessModes": [
      "ReadWriteMany"
    ],
    "persistentVolumeReclaimPolicy": "Retain",
    "hostPath": {
      "path": "/root/recordings"
    }
  }
}

{
  "kind": "PersistentVolumeClaim",
  "apiVersion": "v1",
  "metadata": {
    "name": "recordings"
  },
  "spec": {
    "resources": {
      "requests": {
        "storage": "2Gi"
      }
    },
    "accessModes": [
      "ReadWriteMany"
    ]
  }
}

{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "vgw",
    "creationTimestamp": null,
    "labels": {
      "service": "vgw"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "service": "vgw"
      }
    },
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "service": "vgw"
        }
      },
      "spec": {
        "volumes": [{
          "persistentVolumeClaim": {
            "claimName": "recordings"
          },
          "name": "recordings"
        }, {
          "name": "tenantconfig",
          "secret": {
            "secretName": "tenantconfig",
            "items": [{
              "key": "tenantConfig.json",
              "path": "tenantConfig.json"
            }]
          }
        }],
        "hostNetwork": true,
        "imagePullSecrets": [{
          "name": "admin.registrykey"
        }],
        "containers": [{
          "name": "vgw-media-relay",
          "image": "ibmcom/voice-gateway-mr:latest",
          "ports": [{
            "containerPort": 8080,
            "hostPort": 8080,
            "protocol": "TCP"
          }],
          "env": [{
            "name": "SDP_ADDRESS",
            "valueFrom": {
              "fieldRef": {
                "apiVersion": "v1",
                "fieldPath": "spec.nodeName"
              }
            }
          }, {
            "name": "ENABLE_RECORDING",
            "value": "false"
          }, {
            "name": "RTP_UDP_PORT_RANGE",
            "value": "16384-16394"
          }, {
            "name": "CLUSTER_WORKERS",
            "value": "0"
          }, {
            "name": "MEDIA_RELAY_LOG_LEVEL",
            "value": "DEBUG"
          }, {
            "name": "MEDIA_RELAY_WS_PORT",
            "value": "8080"
          }],
          "resources": {},
          "volumeMounts": [{
            "name": "recordings",
            "mountPath": "/vgw-media-relay/recordings"
          }],
          "terminationMessagePath": "/dev/termination-log",
          "imagePullPolicy": "Always"
        }, {
          "name": "vgw-sip-orchestrator",
          "image": "ibmcom/voice-gateway-so:latest",
          "ports": [{
            "containerPort": 5060,
            "hostPort": 5060,
            "protocol": "TCP"
          }, {
            "containerPort": 5060,
            "hostPort": 5060,
            "protocol": "UDP"
          }],
          "env": [{
            "name": "SIP_HOST",
            "valueFrom": {
              "fieldRef": {
                "apiVersion": "v1",
                "fieldPath": "spec.nodeName"
              }
            }
          }, {
            "name": "MEDIA_RELAY_HOST",
            "value": "localhost:8080"
          }, {
            "name": "SIP_PORT",
            "value": "5060"
          }, {
            "name": "ENABLE_AUDIT_MESSAGES",
            "value": "true"
          }, {
            "name": "ENABLE_TRANSCRIPTION_AUDIT_MESSAGES",
            "value": "true"
          }, {
            "name": "LOG_LEVEL",
            "value": "all"
          }, {
            "name": "MULTI_TENANT_CONFIG_FILE",
            "value": "/tenantconfig/tenantConfig.json"
          }],
          "resources": {},
          "volumeMounts": [{
            "name": "tenantconfig",
            "mountPath": "/tenantconfig/tenantConfig.json",
            "subPath": "tenantConfig.json"
          }],
          "terminationMessagePath": "/dev/termination-log",
          "imagePullPolicy": "Always"
        }],
        "restartPolicy": "Always",
        "terminationGracePeriodSeconds": 30,
        "dnsPolicy": "ClusterFirst",
        "securityContext": {}
      }
    }
  },
  "status": {}
}